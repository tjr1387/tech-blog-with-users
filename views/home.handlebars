{{!-- shows all blog posts in the DB (not their comments) --}}
<section class="blog-entries">
  <h1 class="mb-2">Blog Entries:</h1>
  {{#each entries as |entry|}}
  <div class="row mb-3">
    <h2>
      <a href="entry/{{entry.user.name}}/{{entry.id}}">{{entry.title}}</a> {{!-- this link path isnt be right --}}
    </h2>
    <div>
      <p>{{entry.content}}</p>
      <br>
      <p>By {{entry.user.name}} on {{entry.date_created}}</p>
    </div>
  </div>
  {{/each}}
</section>