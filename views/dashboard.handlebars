{{!-- shows all blogposts from the one user who is logged in --}}
<section class="blog-entries mx-3">
  <h2 class="mb-2">Your Entries:</h2>
  {{#if entries }}
    {{#each entries as |entry|}}
    <div class="single-entry row border-top border-dark mb-2 p-1 bg-light">
      <h3>
        <a href="/entry/{{../username}}/{{entry.id}}">{{entry.title}}</a>
      </h3>
      <div>
        <p>{{entry.content}}</p>
        <p class="text-muted"><em>Created on {{format_date entry.date_created}}</em></p>
      </div>
      <button class="btn btn-danger btn-sm delete-entry-btn" data-id="{{entry.id}}">Delete</button>
    </div>
    {{/each}}
  {{else}}
    <p>You currently have no entries.</p>
  {{/if}}
</section>
{{!-- new entry form --}}
{{#if logged_in}}
<h4 class="mt-5">Add an entry:</h4>
<form class="p-2" id="add-entry-form">
  <div class="form-group">
    <label for="entry-title">Title</label>
    <input type="text" class="form-control" id="entry-title" aria-describedby="textHelp"
      placeholder="Enter title">
  </div>
  <div class="form-group">
    <label for="entry-body">Content</label>
    <textarea class="form-control" id="entry-body" aria-describedby="textareaHelp"
      placeholder="Your entry goes here" rows="6">
    </textarea>
  </div>
  <button type="submit" id="add-entry-btn" class="btn btn-primary mt-1">Add entry</button>
</form>
{{/if}}

<script src="/js/dashboard.js"></script>